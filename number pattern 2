import java.util.Scanner;
public class loops{
public static void main(String[] args){

Scanner sc= new Scanner(System.in);

int n =sc.nextInt();
for(int i=1;i<n*2-1;i++)
{
  int a=n;
for(int j=1;j<2*n-1;j++)
{
if(i>j)
{
a--;
}
if(j>2*n-1-i)
{
a++;
}
System.out.print(a);
}
System.out.println();
}
}
}
