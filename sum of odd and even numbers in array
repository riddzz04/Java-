import java.util.Scanner;
public class minmax{
public static void main(String[] args)
{
Scanner sc= new Scanner(System.in);
int n = sc.nextInt();
int[] arr= new int[n];
int sumo=0;
int sume=0;


for(int i=0;i<n;i++)
{
arr[i]=sc.nextInt();
}


for(int i=0;i<n;i++)
{
if(arr[i] %2==0)
{ sume= sume+arr[i];
}
else{
sumo= sumo+arr[i];
}
}
System.out.println("sum of odd no is" +sumo);

System.out.println("sum of even no is" +sume);



}
}
